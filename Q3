public class Main {
    public static void main(String[] args) {
    Livro l = new Livro( "Harry Potter", "J. K. Rowling",  2005, true);
    l.inserirCategoria(new Categoria("Fantasia"));
    l.todosDados();

    System.out.println("titulo"+l.titulo);
    System.out.println("autor"+l.autor);
    System.out.println("lancamento"+l.anoDePublicacao);
    System.out.println(l.categoria);

    l.todosDados();

    }
}



public class Livro {
    String titulo;
    String autor;
    int anoDePublicacao;
    boolean disponibilidade;
    Categoria categoria;

    public Livro(String titulo,String autor,int anoDePublicacao,boolean disponibilidade) {
        this.titulo = titulo;
        this.autor = autor;
        this.anoDePublicacao = anoDePublicacao;
        this.disponibilidade = disponibilidade;
    }

    void inserirCategoria(Categoria categoria) {
        this.categoria = categoria;
    }

    void todosDados() {
        System.out.println(titulo);
        System.out.println(autor);
        System.out.println(anoDePublicacao);
        System.out.println(categoria.nome);
        System.out.println(disponibilidade);
    }

}
public class Categoria {
    String nome;

    public Categoria(String nome){
        this.nome = nome;
    }
}
