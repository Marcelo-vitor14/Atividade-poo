public class Main {
    public static void main(String[] args) {
        Pessoa titular= new Pessoa("092.746.583-30","Alberto Silva");
    ContaBancaria conta1 = new ContaBancaria(titular,"002","09287",400.0);
    ContaBancaria conta2 = new ContaBancaria(new Pessoa("093.456.892-70","Laura Silva"), "001","67892",600.0);

    conta1.exibirSaldo();
    conta1.depositar(300);
    conta1.sacar(200);
    conta1.transferir(200,conta2);

    conta1.exibirSaldo();
    conta2.exibirSaldo();
    }
}
public class ContaBancaria {
    int  numerodaconta;
    Pessoa titular;
    String conta;
    String numero;
    double saldo;
    ContaBancaria(Pessoa titular,String conta,String numero,double saldo){
        this.titular=titular;
        this.conta = conta;
        this.numero = numero;
        this.saldo =saldo;
    }
    public void depositar(double valor){
    if (valor >= 0){
        saldo += valor;
        System.out.println("deposite o valor de R$"+valor+" realizado com sucesso.");
    }else {
        System.out.println("valor invalido para deposito.");
    }
    }
    public void sacar(double valor){
        if (valor> 0 && saldo>= valor){
          saldo -= valor;
            System.out.println("saque de R$"+valor+" realizado com sucesso.");
        }else{
            System.out.println("valor invalido para saque.");
        }
    }
    public void transferir(double valor,ContaBancaria destino){
        if (valor> 0 && saldo>=valor){
            this.sacar(valor);
            destino.depositar(valor);
            System.out.println("transferir  de R$"+valor+" realizado para "+destino.titular.getNome());
        }

    }
    public void exibirSaldo(){
        System.out.println("Conta"+conta+"-"+numero+"titular"+titular.getNome()+"saldo R$"+saldo);
    }

}
public class Pessoa {
    String cpf;
    String nome;

    Pessoa(String cpf,String nome){
    this.cpf =cpf;
    this.nome=nome;

    }
    public String getNome(){
        return nome;
    }
}
